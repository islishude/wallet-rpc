{
  "name": "wallet-rpc",
  "version": "6.0.0",
  "description": "jsonrpc 2.0 client for crypto-currencies by TypeScript",
  "main": "dist",
  "types": "dist",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "ts-node scripts/clean.ts",
    "lint:fix": "tslint -p tsconfig.json --fix",
    "lint:only": "tslint -p tsconfig.json",
    "prebuild": "npm run lint:only && npm run clean",
    "build": "tsc -p tsconfig.json",
    "build:only": "tsc -p tsconfig.json",
    "pretest": "npm run build",
    "test": "ava",
    "test:only": "ava",
    "prerelease": "npm run build && npm test",
    "release": "git push --all && git push --tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/islishude/wallet-rpc"
  },
  "homepage": "https://github.com/islishude/wallet-rpc#readme",
  "bin": {
    "wallet-rpc": "dist/bin/cli.js"
  },
  "ava": {
    "compileEnhancements": false,
    "files": [
      "test/**/*"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "keywords": [
    "jsonrpc",
    "bitcoin",
    "ethereum",
    "usdt",
    "eos"
  ],
  "author": {
    "email": "lishude@foxmail.com",
    "name": "lishude"
  },
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^10.12.15",
    "ava": "^2.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.5.2"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
