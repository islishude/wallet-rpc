{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "outDir": "dist",
    "declaration": true,
    "alwaysStrict": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
